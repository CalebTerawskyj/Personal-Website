---
import '../styles/global.css';

interface Props {
    title: string;
    description: string;
    link?: string;
    logo?: string;
}

const { title, description, link, logo } = Astro.props;
---

<div class="relative bg-white/90 border-gray-200 dark:text-neutral-100 dark:bg-gray-700 rounded-xl p-6 shadow-sm hover:shadow-lg hover:scale-[1.02] transition-all duration-300 backdrop-blur hover:text-shadow-lg">
  <!-- Logo -->
  {logo && (
    <div class="absolute top-3 right-3">
      <img src={logo} alt={`${title} logo`} class="w-8 h-8" />
    </div>
  )}

  <h3 class="text-xl font-semibold text-gray-700 dark:text-neutral-50 mb-2">{title}</h3>
  <p class="text-sm text-gray-700 dark:text-gray-300 mb-4 text-left">{description}</p>

  {link && (
    <a href={link} class="text-sm text-cyan-100 hover:underline">Learn more â†’</a>
  )}
</div>
