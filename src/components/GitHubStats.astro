---
interface Props {
    username: string;
}

const { username } = Astro.props;

// Fetch GitHub user data
const response = await fetch(`https://api.github.com/users/${username}`, {
    headers: {
        'Accept': 'application/vnd.github.v3+json',
        'User-Agent': 'Astro-Portfolio'
    }
});

if (!response.ok) {
    throw new Error(`Failed to fetch GitHub data: ${response.status}`);
}

const user = await response.json();

// Fetch user's repositories
const reposResponse = await fetch(`https://api.github.com/users/${username}/repos?sort=updated&per_page=6`, {
    headers: {
        'Accept': 'application/vnd.github.v3+json',
        'User-Agent': 'Astro-Portfolio'
    }
});

const repos = reposResponse.ok ? await reposResponse.json() : [];
---

<div class="bg-gray-800 dark:bg-gray-700 rounded-xl p-6 shadow-lg">
    <div class="flex items-center gap-4 mb-6">
        <img src={user.avatar_url} alt={`${user.login} avatar`} class="w-16 h-16 rounded-full border-2 border-cyan-500" />
        <div>
            <h3 class="text-xl font-bold text-white">{user.name || user.login}</h3>
            <a href={user.html_url} target="_blank" rel="noopener noreferrer" class="text-cyan-300 hover:text-cyan-100 text-sm transition-colors duration-300">
                @{user.login}
            </a>
            {user.bio && <p class="text-gray-300 text-sm mt-1">{user.bio}</p>}
        </div>
    </div>

    <div class="grid grid-cols-3 gap-4 mb-6">
        <div class="text-center">
            <div class="text-2xl font-bold text-cyan-300">{user.public_repos}</div>
            <div class="text-sm text-gray-400">Repositories</div>
        </div>
        <div class="text-center">
            <div class="text-2xl font-bold text-cyan-300">{user.followers}</div>
            <div class="text-sm text-gray-400">Followers</div>
        </div>
        <div class="text-center">
            <div class="text-2xl font-bold text-cyan-300">{user.following}</div>
            <div class="text-sm text-gray-400">Following</div>
        </div>
    </div>

    {user.location && (
        <div class="flex items-center gap-2 text-gray-300 text-sm mb-4">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
            </svg>
            {user.location}
        </div>
    )}

    {repos.length > 0 && (
        <div>
            <h4 class="text-lg font-semibold text-white mb-3">Recent Repositories</h4>
            <div class="space-y-3">
                {repos.slice(0, 3).map((repo: any) => (
                    <div class="bg-gray-700 rounded-lg p-3">
                        <div class="flex justify-between items-start mb-2">
                            <a href={repo.html_url} target="_blank" rel="noopener noreferrer" class="text-cyan-300 hover:text-cyan-100 font-medium transition-colors duration-300">
                                {repo.name}
                            </a>
                            <div class="flex items-center gap-1 text-xs text-gray-400">
                                <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                </svg>
                                {repo.stargazers_count}
                            </div>
                        </div>
                        {repo.description && (
                            <p class="text-gray-300 text-sm mb-2">{repo.description}</p>
                        )}
                        <div class="flex items-center gap-4 text-xs text-gray-400">
                            {repo.language && (
                                <span class="flex items-center gap-1">
                                    <div class="w-2 h-2 rounded-full bg-cyan-500"></div>
                                    {repo.language}
                                </span>
                            )}
                            <span>Updated {new Date(repo.updated_at).toLocaleDateString()}</span>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    )}
</div></content>