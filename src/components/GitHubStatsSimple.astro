---
interface Props {
    username: string;
    theme?: 'dark' | 'light';
}

const { username, theme = 'dark' } = Astro.props;
const themeParam = theme === 'dark' ? 'dark' : 'default';
---

<div class="space-y-6">
    <!-- GitHub Stats Card -->
    <div class="bg-gray-800 dark:bg-gray-700 rounded-xl p-6 shadow-lg">
        <h3 class="text-xl font-bold text-white mb-4 flex items-center gap-2">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.91 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            GitHub Profile
        </h3>

        <div class="space-y-4">
            <!-- Profile Link -->
            <a href={`https://github.com/${username}`} target="_blank" rel="noopener noreferrer"
               class="inline-flex items-center gap-2 text-cyan-300 hover:text-cyan-100 transition-colors duration-300">
                <span>@{username}</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                </svg>
            </a>

            <!-- Stats Images -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <img
                    src={`https://github-readme-stats.vercel.app/api?username=${username}&show_icons=true&theme=${themeParam}&hide_border=true&bg_color=1f2937&text_color=ffffff&title_color=06b6d4&icon_color=06b6d4`}
                    alt="GitHub Stats"
                    class="rounded-lg shadow-lg"
                    loading="lazy"
                />
                <img
                    src={`https://github-readme-stats.vercel.app/api/top-langs/?username=${username}&layout=compact&theme=${themeParam}&hide_border=true&bg_color=1f2937&text_color=ffffff&title_color=06b6d4`}
                    alt="Top Languages"
                    class="rounded-lg shadow-lg"
                    loading="lazy"
                />
            </div>

            <!-- Contribution Graph -->
            <img
                src={`https://github-readme-activity-graph.vercel.app/graph?username=${username}&theme=${themeParam}&hide_border=true&bg_color=1f2937&color=06b6d4&line=06b6d4&point=ffffff`}
                alt="GitHub Contribution Graph"
                class="rounded-lg shadow-lg w-full"
                loading="lazy"
            />
        </div>
    </div>
</div></content>