---
interface Props {
    title: string;
    description: string;
    link?: string;
    githubLink?: string;
    tech?: string[];
    status?: 'Completed' | 'In Progress' | 'Archived';
}

const { title, description, link, githubLink, tech, status } = Astro.props;

const statusColors = {
    'Completed': 'bg-green-500/20 text-green-300 border-green-500/30',
    'In Progress': 'bg-yellow-500/20 text-yellow-300 border-yellow-500/30',
    'Archived': 'bg-gray-500/20 text-gray-300 border-gray-500/30',
};
---

<div class="relative bg-gray-800 border-gray-700 dark:text-neutral-100 dark:bg-gray-700 backdrop-blur-sm border rounded-xl p-6 shadow-lg hover:shadow-xl hover:scale-105 transform transition-all duration-300 flex flex-col h-full">
    <div class="flex-grow">
        <div class="flex justify-between items-start mb-4">
            <div>
                {status && (
                    <div class={`inline-block px-2 py-1 text-xs font-semibold rounded-full border ${statusColors[status]} mb-2`}>
                        {status}
                    </div>
                )}
                <h3 class="text-2xl font-bold text-white pr-4">{title}</h3>
            </div>
            <div class="flex gap-2 items-center flex-shrink-0">
                {(tech ?? []).map((icon) => (
                    <img src={`/icons/${icon}.svg`} alt={icon} class="w-6 h-6" />
                ))}
            </div>
        </div>
        <p class="text-gray-300 mb-4">{description}</p>
    </div>
    <div class="mt-auto pt-4">
        <div class="flex justify-between items-center">
            {link ? (
                <a href={link} class="text-cyan-300 hover:text-cyan-100 font-medium transition-colors duration-300">View Project</a>
            ) : <div></div>}
            {githubLink && (
                <a href={githubLink} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-white transition-colors duration-300">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.91 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                </a>
            )}
        </div>
    </div>
</div>